<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
</head>
<link rel="stylesheet" href="songs/css/index.css" />
<body>
    <div class="container">
        <form method="get" action="/">
            <button type="submit">Add new</button>
        </form>
    </div>
    <% if (data) { %>
        <table border="2px">
                <tr>
                    <th>Song name</th>
                    <th>Film</th>
                    <th>Director</th>
                    <th>Singer</th>
                    <th>Actor</th>
                    <th>Actoress</th>
                </tr>
                <% data.forEach(ele => { %>
                    <tr>
                        <td><%= ele.songname %></td>
                        <td><%= ele.film %></td>
                        <td><%= ele.director%></td>
                        <td><%= ele.singer %></td>
                        <td><%= ele.actor %></td>
                        <td><%= ele.actress %></td>
                        <td>
                            <form method="post" action="/deletesong/<%= ele._id %>">
                                <button type="submit" class="btn">Delete</button>
                            </form>
                        </td>
                        
                    </tr>
                <% }) %>
        </table>

        <h1>Total no of songs - <%= tablecount %></h1>
        
    <% } %>
   
</body>
</html>